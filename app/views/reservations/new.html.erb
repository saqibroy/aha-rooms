
<% flash.each do |name,msg|%>
                <%= content_tag :div, msg, class: "alert alert-danger flash-popup", role: "alert" %>
                <% end %> <!-- START PAGE CONTAINER -->
        <div class="page-container">
            
            <!-- START PAGE SIDEBAR -->
            <%= render 'layouts/navbar' %>
            <!-- PAGE CONTENT -->
            <div class="page-content">
                
                <!-- START X-NAVIGATION VERTICAL -->
                <ul class="x-navigation x-navigation-horizontal x-navigation-panel">
                    <!-- TOGGLE NAVIGATION -->
                    <li class="xn-icon-button">
                        <a href="#" class="x-navigation-minimize"><span class="fa fa-dedent"></span></a>
                    </li>
                    <!-- END TOGGLE NAVIGATION -->
                    <!-- SEARCH -->
                      
                    <!-- END SEARCH -->
                    <!-- SIGN OUT -->
                    <li class="xn-icon-button pull-right">
                        <a href="#" class="mb-control" data-box="#mb-signout"><span class="fa fa-sign-out"></span></a>
                                                
                    </li> 
                    <!-- END SIGN OUT -->
                    <!-- MESSAGES -->
                   
                    <!-- END MESSAGES -->
                    <!-- TASKS -->
                    
                    <!-- END TASKS -->
                </ul>
                <!-- END X-NAVIGATION VERTICAL -->                     

                <!-- START BREADCRUMB -->
                <ul class="breadcrumb">
                    <li><%= link_to "Home", admin_path %></li>                    
                    <li class="active">Reserve Room</li>
                </ul>
                <!-- END BREADCRUMB -->  
                <div class="page-content-wrap">
                 <div class="row">
                        <div class="col-md-12">
                            
                            
                            <%= simple_form_for(@reservation) do |f| %>
  <%= f.error_notification %>
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title"><strong>Reserve Room</strong></h3>
                                    <ul class="panel-controls">
                                        <li><a href="#" class="panel-remove"><span class="fa fa-times"></span></a></li>
                                    </ul>
                                </div>
                               
                                <div class="panel-body"> 
                                <%= month_calendar events: @reservations do |date, reservations| %>
  <%= date %>


  <% reservations.each do |reservation| %>
    <div>
      
      <%= link_to "Room No: #{ reservation.room.room_no }", reservation %><br>
      <%= reservation.check_out_date.strftime("Check Out Date %m/%d/%Y") %>
    </div>
  <% end %>
<% end %>
                                     <div class="form-group col-md-offset-2">
                                        <label class="col-md-2 col-xs-12 control-label ">USER EMAIL</label>
                                        <div class="col-md-6 col-xs-12">                                            
                                            <div class="input-group">
                                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                <%= f.collection_select :user_id, User.all.where(user_type: "User"), :id, :email,{}, {:class => "form-input form-control"} %>
                                            </div>                                            
                                        </div>
                                    </div>
                                    <br><br>
                                     <div class="form-group col-md-offset-2">
                                        <label class="col-md-2 col-xs-12 control-label">ROOM</label>
                                        <div class="col-md-6 col-xs-12">
                                        <div class="input-group">
                                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>

                                            <%= f.input :no_of_rooms,label: false, required: true,input_html: {class: "form-control"},wrapper: false%>
                                           </div>
                                        </div>
                                    </div>
                                    <br><br>
                                     <div class="form-group col-md-offset-2">
                                        <label class="col-md-2 col-xs-12 control-label">CHECK IN</label>
                                        <div class="col-md-6 col-xs-12"> 
                                         <div >
                                                                                         
                                            <%= f.input :check_in_date,label: false, required: true,wrapper: false%>
                                           </div>
                                        </div>
                                    </div>
                                     <br><br>
                                     <div class="form-group col-md-offset-2">
                                        <label class="col-md-2 col-xs-12 control-label">CHECK OUT</label>
                                        <div class="col-md-6 col-xs-12">
                                        <div >
                                                                                            
                                            <%= f.input :check_out_date,label: false, required: true,wrapper: false%>
                                        </div>   
                                        </div>
                                    </div>
                                    <input type="hidden" name="id" value="<%= @room.id%>">
                                     
                                   
                                </div>
                                <div class="panel-footer">
                                    <button class="btn btn-default">Clear Form</button>                                    
                                    <button class="btn btn-primary pull-right">Submit</button>
                                </div>
                            </div>
                            <% end %>
                            
                        </div>
                    </div>  
                </div>                   
             </div>
             </div>

                   
                   
               

        <!-- MESSAGE BOX-->
        <div class="message-box animated fadeIn" data-sound="alert" id="mb-signout">
            <div class="mb-container">
                <div class="mb-middle">
                    <div class="mb-title"><span class="fa fa-sign-out"></span> Log <strong>Out</strong> ?</div>
                    <div class="mb-content">
                        <p>Are you sure you want to log out?</p>                    
                        <p>Press No if you want to continue work. Press Yes to logout current user.</p>
                    </div>
                    <div class="mb-footer">
                        <div class="pull-right">
                            <%=link_to "Yes", destroy_user_session_path, method: :delete, class: "btn btn-success btn-lg" %>
                            <button class="btn btn-default btn-lg mb-control-close">No</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
























