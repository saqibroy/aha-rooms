<%= simple_form_for(@room) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :room_no %>
    <%= f.input :rate %>
    <%= f.input :discount %>
    <%= f.input :available %>
    <%= f.input :description %>
    <%= f.input :total_beds %>
    <%= f.input :total_people %>
    <%= f.input :meal %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
