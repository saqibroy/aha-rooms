<p id="notice"><%= notice %></p>

<h1>Listing Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Room no</th>
      <th>Rate</th>
      <th>Discount</th>
      <th>Available</th>
      <th>Description</th>
      <th>Total beds</th>
      <th>Total people</th>
      <th>Meal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.room_no %></td>
        <td><%= room.rate %></td>
        <td><%= room.discount %></td>
        <td><%= room.available %></td>
        <td><%= room.description %></td>
        <td><%= room.total_beds %></td>
        <td><%= room.total_people %></td>
        <td><%= room.meal %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

