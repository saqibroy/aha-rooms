 <!-- START PAGE CONTAINER -->
        <div class="page-container">
            
            <!-- START PAGE SIDEBAR -->
            <%= render 'layouts/navbar' %>
            <!-- PAGE CONTENT -->
            <div class="page-content">
                
                <!-- START X-NAVIGATION VERTICAL -->
                <ul class="x-navigation x-navigation-horizontal x-navigation-panel">
                    <!-- TOGGLE NAVIGATION -->
                    <li class="xn-icon-button">
                        <a href="#" class="x-navigation-minimize"><span class="fa fa-dedent"></span></a>
                    </li>
                    <!-- END TOGGLE NAVIGATION -->
                    <!-- SEARCH -->
                      
                    <!-- END SEARCH -->
                    <!-- SIGN OUT -->
                    <li class="xn-icon-button pull-right">
                        <a href="#" class="mb-control" data-box="#mb-signout"><span class="fa fa-sign-out"></span></a>
                                                
                    </li> 
                    <!-- END SIGN OUT -->
                    <!-- MESSAGES -->
                   
                    <!-- END MESSAGES -->
                    <!-- TASKS -->
                    
                    <!-- END TASKS -->
                </ul>
                <!-- END X-NAVIGATION VERTICAL -->                     

                <!-- START BREADCRUMB -->
                <ul class="breadcrumb">
                    <li><%= link_to "Home", admin_path %></li>
                    <li><%= link_to "Hotels", admin_hotels_path %></li>                    
                    <li class="active">Rooms</li>
                </ul>
                <!-- END BREADCRUMB -->  
                <div class="page-content-wrap">
                 <div class="row">
                        <div class="col-md-12">
                            
                            
                            <%= simple_form_for(@room) do |f| %>
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title"><strong>ADD ROOM</strong></h3>
                                    <ul class="panel-controls">
                                        <li><a href="#" class="panel-remove"><span class="fa fa-times"></span></a></li>
                                    </ul>
                                </div>
                               
                                <div class="panel-body"> 
                                     <div class="form-group col-md-offset-2">
                                        <label class="col-md-2 col-xs-12 control-label ">ROOM NO</label>
                                        <div class="col-md-6 col-xs-12">                                            
                                            <div class="input-group">
                                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                <%= f.input :room_no,label: false, required: true,input_html: {class: "form-control"},wrapper: false%>
                                            </div>                                            
                                        </div>
                                    </div>
                                    <br><br>
                                     <div class="form-group col-md-offset-2">
                                        <label class="col-md-2 col-xs-12 control-label">NUM OF BEDS</label>
                                        <div class="col-md-6 col-xs-12">
                                        <div class="input-group">
                                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>

                                            <%= f.input :total_beds,label: false, required: true,input_html: {class: "form-control"},wrapper: false%>
                                           </div>
                                        </div>
                                    </div>
                                    <br><br>
                                     <div class="form-group col-md-offset-2">
                                        <label class="col-md-2 col-xs-12 control-label">NO OF PEOPLE</label>
                                        <div class="col-md-6 col-xs-12"> 
                                         <div class="input-group">
                                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>                                          
                                            <%= f.input :total_people,label: false, required: true,input_html: {class: "form-control"},wrapper: false%>
                                           </div>
                                        </div>
                                    </div>
                                     <br><br>
                                     <div class="form-group col-md-offset-2">
                                        <label class="col-md-2 col-xs-12 control-label">MEAL</label>
                                        <div class="col-md-6 col-xs-12">
                                        <div class="input-group">
                                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>                                            
                                            <%= f.input :meal,label: false, required: true,input_html: {class: "form-control"},wrapper: false%>
                                        </div>   
                                        </div>
                                    </div>
                                     <br><br>
                                     <div class="form-group col-md-offset-2">
                                        <label class="col-md-2 col-xs-12 control-label">RATE</label>
                                        <div class="col-md-6 col-xs-12">
                                        <div class="input-group">
                                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>                                            
                                            <%= f.input :rate,label: false, required: true,input_html: {class: "form-control"},wrapper: false%>
                                        </div>   
                                        </div>
                                    </div>
                                    <br><br>
                                     <div class="form-group col-md-offset-2">
                                        <label class="col-md-2 col-xs-12 control-label">DISCOUNT</label>
                                        <div class="col-md-6 col-xs-12">
                                        <div class="input-group">
                                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>                                            
                                            <%= f.input :discount,label: false, required: true,input_html: {class: "form-control"},wrapper: false%>
                                        </div>   
                                        </div>
                                    </div>
                                    <br><br>
                                     <div class="form-group col-md-offset-2">
                                        <label class="col-md-2 col-xs-12 control-label">Description</label>
                                        <div class="col-md-6 col-xs-12">
                                        <div class="input-group">
                                                                                           
                                            <%= f.input :description, required: true,input_html: {class: "form-control"},wrapper: false,label: false %>
                                        </div>   
                                        </div>
                                    </div>
                                    
                                    
                                </div>
                                <div class="panel-footer">
                                    <button class="btn btn-default">Clear Form</button>
                                    <%= f.button  :submit , name: "id",value: @hotel.id,class:"btn btn-primary pull-right"%>                                    
                                    
                                </div>
                            </div>
                            <% end %>
                            
                        </div>
                    </div>  
                </div>                   
             </div>
             </div>

                   
                   
               

        <!-- MESSAGE BOX-->
        <div class="message-box animated fadeIn" data-sound="alert" id="mb-signout">
            <div class="mb-container">
                <div class="mb-middle">
                    <div class="mb-title"><span class="fa fa-sign-out"></span> Log <strong>Out</strong> ?</div>
                    <div class="mb-content">
                        <p>Are you sure you want to log out?</p>                    
                        <p>Press No if you want to continue work. Press Yes to logout current user.</p>
                    </div>
                    <div class="mb-footer">
                        <div class="pull-right">
                            <%=link_to "Yes", destroy_user_session_path, method: :delete, class: "btn btn-success btn-lg" %>
                            <button class="btn btn-default btn-lg mb-control-close">No</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

